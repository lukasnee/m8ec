{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open m8ec STM32CubeMX project",
            "group": "none",
            "type": "shell",
            "linux": {
                "command": "/mnt/c/Program\\ Files/STMicroelectronics/STM32Cube/STM32CubeMX/STM32CubeMX.exe firmware/firmware.ioc"
            },
            "presentation": {
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Reset target",
            "group": "none",
            "type": "shell",
            "linux": {
                "command": "python tools/m8ec.py -r"
            },
            "presentation": {
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build m8ec",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "linux": {
                "command": "python tools/m8ec.py -b",
                "problemMatcher": "$gcc"
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Build, flash and reset m8ec",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "linux": {
                "command": "python tools/m8ec.py -bfr",
                "problemMatcher": "$gcc"
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Build m8ec [debug]",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "type": "shell",
            "linux": {
                "command": "python tools/m8ec.py -bd",
                "problemMatcher": "$gcc"
            },
            "presentation": {
                "focus": true
            },
            "hide": true
        },
        {
            "label": "Launch OpenOCD",
            "command": "openocd",
            "type": "shell",
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(Info |Warn |Error):(.*)$",
                    "severity": 1,
                    "message": 2
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^Open On-Chip Debugger.*",
                    "endsPattern": ".*watchpoints.*"
                }
            },
            "presentation": {
                "reveal": "always"
            },
            "isBackground": true
        },
        {
            "label": "preLaunchTask_m8ec",
            "group": "none",
            "dependsOn": [
                "Build m8ec [debug]",
                "Launch OpenOCD"
            ],
            "dependsOrder": "sequence",
            "hide": true,
        },
    ]
}